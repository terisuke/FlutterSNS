{
  "database": {
    "rules": "'/Users/teradakousuke/Developer/udemy_flutter_sns/firestore_rules/firestore.rules'"
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log"
